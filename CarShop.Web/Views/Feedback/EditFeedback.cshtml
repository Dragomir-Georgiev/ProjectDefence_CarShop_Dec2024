@using CarShop.Web.ViewModels.Feedback
@model FeedbackFormViewModel

@{
    ViewData["Title"] = "Edit Feedback";
}

<h1>Edit Feedback</h1>

<form asp-action="EditFeedback" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CarId" />

    <div class="form-group">
        <label asp-for="Comment" class="control-label">Your Feedback</label>
        <textarea asp-for="Comment" class="form-control" rows="3" required></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rating" class="control-label">Rating</label>
        <select asp-for="Rating" class="form-control" required>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" asp-route-carId="@Model.CarId" class="btn btn-secondary">Cancel</a>
</form>