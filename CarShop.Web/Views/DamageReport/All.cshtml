@using CarShop.Web.ViewModels.DamageReport
@model IEnumerable<DamageReportIndexViewModel>

@{
    ViewData["Title"] = "Cars with Damage Report";
}

<h1>Cars with Damage Report</h1>

@if (Model.Any())
{
    <div class="list-group">
        @foreach (var car in Model)
        {
            <div class="list-group-item">
                <h3>@car.CarMakeModel</h3>
                <ul class="list-group mt-3">
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <p class="mb-1"><strong>Date:</strong> @car.DamageReport.ReportedDate.ToString("MMMM dd, yyyy")</p>
                            <p class="mb-0">@car.DamageReport.Description</p>
                            <p class="mb-0">@car.DamageReport.CostEstimation.ToString("C")</p>
                        </div>
                        <div class="d-flex gap-2">
                            <a asp-action="Edit" asp-route-id="@car.DamageReport.Id" class="btn btn-warning btn-sm">Edit</a>
                            <form asp-action="Remove" asp-route-id="@car.DamageReport.Id" method="post">
                                <button class="btn btn-danger btn-sm">Remove</button>
                            </form>
                        </div>
                    </div>
                </ul>
            </div>
        }
    </div>
}
else
{
    <p class="text-muted">No cars currently have damage report.</p>
}